import csv
import random
import os 

import discord 
from dotenv import load_dotenv

load_dotenv()
TOKEN = os.getenv('DISCORD_TOKEN')

bot = discord.Client()



def getRandoRow(rows):
  selected = random.choice(rows)
  print(selected[0] + " Please answer in all caps.")
  
  if input() == selected[1]:
    print("Correct. Here have a cookie.")
  else:
    print("Sorry but the correct answer is " + selected[1])

file = open("Trivia.csv")
csvReader = csv.reader(file)

rows = []
for row in csvReader:
  rows.append(row)

#getRandoRow(rows)

@bot.command(name='trivia')
async def trivia(ctx):
    await ctx.send(getRandoRow)


file.close()
